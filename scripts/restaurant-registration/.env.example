# Admin password for email confirmation
ADMIN_PASSWORD=your-admin-password-here

# Chrome profile path (optional, defaults to automation profile)
CHROME_PROFILE_PATH=/path/to/chrome/profile

# Debug mode (optional, can also use --debug flag)
DEBUG_MODE=false

# Registration URL (optional, defaults to production)
REGISTRATION_URL=https://admin.pumpd.co.nz/register

# Screenshot directory (optional)
SCREENSHOT_DIR=./screenshots

# Headless mode (optional, defaults to false for better reliability)
HEADLESS=false